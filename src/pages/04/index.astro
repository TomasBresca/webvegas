---
// Importaciones
import Navigation from '../../components/Navigation.astro';
import HeroSection from '../../components/HeroSection.astro';
import GanadoresSection from '../../components/GanadoresSection.astro';
import JuegosSection from '../../components/JuegosSection.astro';
import ComoCargarSection from '../../components/ComoCargarSection.astro';
import SoporteSection from '../../components/SoporteSection.astro';
import RedesSection from '../../components/RedesSection.astro';

// Configuraci√≥n del sitio para versi√≥n 4
const domain = "https://timbaya.com/04";
const whatsappLink = "#";
const registerLink = "#";
const bonusLink = "#";
const soporteLink = "#";
const whatsappShareLink = `https://wa.me/?text=¬°Jug√°%20en%20la%20mejor%20plataforma%20del%20pa√≠s!%20Registrate%20y%20recib√≠%20un%20BONO%20DE%20BIENVENIDA%20üëâ%20${domain}`;
const facebookShareLink = `https://www.facebook.com/sharer/sharer.php?u=${domain}`;
const instagramLink = "https://www.instagram.com/lasvegass.ok/";
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Las Vegas - 04</title>
  <link rel="stylesheet" href="/styles/global.css">
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="/images/logo.png">
  
  <script>
    // Script para optimizar el scroll en desktop
    document.addEventListener('DOMContentLoaded', function() {
      // Detectamos si estamos en desktop
      const isDesktop = window.innerWidth >= 768;
      
      if (isDesktop) {
        // Optimizamos el rendimiento de scroll en desktop
        let ticking = false;
        let lastScrollY = window.scrollY;
        
        // Funci√≥n para manejar el scroll con mejor rendimiento
        function handleScroll() {
          if (!ticking) {
            window.requestAnimationFrame(function() {
              // Realizar operaciones de scroll aqu√≠
              lastScrollY = window.scrollY;
              ticking = false;
            });
            ticking = true;
          }
        }
        
        // Habilitamos passive: true para mejorar el rendimiento
        window.addEventListener('scroll', handleScroll, { passive: true });
        
        // A√±adimos la clase espec√≠fica para desktop
        document.documentElement.classList.add('desktop-scroll');
      }
    });
  </script>
</head>

<body class="bg-gradient-to-b from-[#121212] to-[#1e1e1e] text-white font-body">
  <!-- Men√∫ Navigation -->
  <Navigation />

  <!-- Secciones del sitio -->
  <HeroSection
    whatsappLink={whatsappLink}
    registerLink={registerLink}
    bonusLink={bonusLink}
  />
  
  <GanadoresSection
    registerLink={registerLink}
  />
  
  <JuegosSection
    whatsappLink={whatsappLink}
  />
  
  <ComoCargarSection
    whatsappLink={whatsappLink}
  />
  
  <SoporteSection
    soporteLink={soporteLink}
  />
  
  <RedesSection
    domain={domain}
    whatsappShareLink={whatsappShareLink}
    facebookShareLink={facebookShareLink}
    instagramLink={instagramLink}
  />

  <!-- Scripts externos -->
  <!-- Cargar Whapify con is:inline y defer para evitar problemas de CORS en desarrollo -->
  <script is:inline defer src="https://ap.whapify.ai/webchat/plugin.js?v=6"></script>
  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      // Verificar si ktt10 est√° disponible despu√©s de que se cargue el script
      setTimeout(function() {
        if (typeof ktt10 !== 'undefined') {
          ktt10.setup({id:"xoWFFmjlTk",accountId:"1588550",color:"#006dff"});
        } else {
          console.warn('El objeto ktt10 no est√° disponible. Verifica la carga del script de Whapify.');
        }
      }, 1000); // Esperar 1 segundo para asegurarse de que el script se haya cargado
    });
  </script>

  <!-- Estilos personalizados para el bot√≥n de Whapify -->
  <style is:global>
    /* Estilos para el contenedor principal de Whapify */
    .ktt10-btn {
      margin-bottom: 70px !important;
      padding-bottom: 20px !important;
    }
  </style>
</body>
</html> 