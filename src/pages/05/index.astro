<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Las Vegas - 05</title>
  <link rel="stylesheet" href="/styles/global.css">
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="/images/logo.png">
  
  <script>
    // Script para optimizar el scroll en desktop
    document.addEventListener('DOMContentLoaded', function() {
      // Detectamos si estamos en desktop
      const isDesktop = window.innerWidth >= 768;
      
      if (isDesktop) {
        // Optimizamos el rendimiento de scroll en desktop
        let ticking = false;
        let lastScrollY = window.scrollY;
        
        // Funci칩n para manejar el scroll con mejor rendimiento
        function handleScroll() {
          if (!ticking) {
            window.requestAnimationFrame(function() {
              // Realizar operaciones de scroll aqu칤
              lastScrollY = window.scrollY;
              ticking = false;
            });
            ticking = true;
          }
        }
        
        // Habilitamos passive: true para mejorar el rendimiento
        window.addEventListener('scroll', handleScroll, { passive: true });
        
        // A침adimos la clase espec칤fica para desktop
        document.documentElement.classList.add('desktop-scroll');
      }
    });
  </script>
</head>

<body class="bg-gradient-to-b from-[#121212] to-[#1e1e1e] text-white font-body">
