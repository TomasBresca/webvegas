import HeroSection from '../../components/HeroSection.astro';
import GanadoresSection from '../../components/GanadoresSection.astro';
import JuegosSection from '../../components/JuegosSection.astro';
import ComoCargarSection from '../../components/ComoCargarSection.astro';
import SoporteSection from '../../components/SoporteSection.astro';
import RedesSection from '../../components/RedesSection.astro';

// Configuraci√≥n del sitio para versi√≥n 3
const domain = "https://timbaya.com/03";
const whatsappLink = "https://wa.me/5491155608678?text=Holaa%20quiero%20crear%20mi%20cuenta";
