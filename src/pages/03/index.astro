const bonusLink = "https://wa.me/5491155608678?text=Holaa%20quiero%20crear%20mi%20cuenta";
const soporteLink = "https://wa.me/5491155608678?text=Holaa%20quiero%20crear%20mi%20cuenta";
const whatsappShareLink = `https://wa.me/?text=¬°Jug√°%20en%20la%20mejor%20plataforma%20del%20pa√≠s!%20Registrate%20y%20recib√≠%20un%20BONO%20DE%20BIENVENIDA%20üëâ%20${domain}`;
const facebookShareLink = `https://www.facebook.com/sharer/sharer.php?u=${domain}`;
const instagramLink = "https://www.instagram.com/lasvegass.ok/";
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Las Vegas - 03</title>
  <!-- Meta tags para CSP que permiten recursos de Clarity -->
  <meta http-equiv="Content-Security-Policy" content="default-src 'self'; 
    script-src 'self' 'unsafe-inline' https://www.clarity.ms https://ap.whapify.ai; 
    style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://ap.whapify.ai; 
    font-src 'self' https://fonts.gstatic.com; 
    img-src 'self' https://ap.whapify.ai data:; 
    connect-src 'self' https://*.clarity.ms https://ap.whapify.ai; 
    frame-src 'self' https://ap.whapify.ai;">
  <link rel="stylesheet" href="/styles/global.css">
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="/images/logo.png">

  <!-- Microsoft Clarity - implementaci√≥n alternativa -->
  <script is:inline>
    window.addEventListener('load', function() {
      try {
        var clarity = document.createElement('script');
        clarity.async = true;
        clarity.src = "https://www.clarity.ms/tag/qswqx21ky1";
        document.head.appendChild(clarity);
        console.log('Clarity script initiated');
      } catch (err) {
        console.error('Error loading Clarity:', err);
      }
    });
  </script>
  
  <script>
    // Script para optimizar el scroll en desktop
    document.addEventListener('DOMContentLoaded', function() {
      // Detectamos si estamos en desktop
      const isDesktop = window.innerWidth >= 768;
      
      if (isDesktop) {
        // Optimizamos el rendimiento de scroll en desktop
        let ticking = false;
        let lastScrollY = window.scrollY;
        
        // Funci√≥n para manejar el scroll con mejor rendimiento
        function handleScroll() {
          if (!ticking) {
            window.requestAnimationFrame(function() {
              // Realizar operaciones de scroll aqu√≠
              lastScrollY = window.scrollY;
              ticking = false;
            });
            ticking = true;
          }
        }
        
        // Habilitamos passive: true para mejorar el rendimiento
        window.addEventListener('scroll', handleScroll, { passive: true });
        
        // A√±adimos la clase espec√≠fica para desktop
        document.documentElement.classList.add('desktop-scroll');
      }
    });
  </script>
</head>

<body class="bg-gradient-to-b from-[#121212] to-[#1e1e1e] text-white font-body">
  <!-- Men√∫ Navigation -->
  <Navigation />

  <!-- Secciones del sitio -->
  <HeroSection
    whatsappLink={whatsappLink}
    registerLink={registerLink}
    bonusLink={bonusLink}
  />
  
  <GanadoresSection
    registerLink={registerLink}
  />
  
  <JuegosSection
    whatsappLink={bonusLink}
  />
  
  <ComoCargarSection
    whatsappLink={whatsappLink}
  />
  
  <SoporteSection
    soporteLink={soporteLink}
  />
  
  <RedesSection
    domain={domain}
    whatsappShareLink={whatsappShareLink}
    facebookShareLink={facebookShareLink}
    instagramLink={instagramLink}
  />

  <!-- Scripts externos -->
  <!-- Usar un enfoque alternativo para cargar el script de Whapify -->
  <script is:inline defer src="https://ap.whapify.ai/webchat/plugin.js?v=6"></script>
  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      // Verificar si ktt10 est√° disponible despu√©s de que se cargue el script
      setTimeout(function() {
        if (typeof ktt10 !== 'undefined') {
          ktt10.setup({id:"UYU71FCOo6s",accountId:"1567022",color:"#006dff"});
          
          // Activar autom√°ticamente el chat despu√©s de 4 segundos
          setTimeout(function() {
            // Buscar el bot√≥n de Whapify y simulamos un clic
            const whapifyBtn = document.querySelector('.ktt10-btn');
            if (whapifyBtn) {
              whapifyBtn.click();
            } else {
              // Alternativa: intentar abrir el chat directamente con la API de ktt10
              if (typeof ktt10.open === 'function') {
                ktt10.open();
              } else if (typeof ktt10.toggle === 'function') {
                ktt10.toggle();
              }
            }
          }, 2500); // 2.5 segundos
        } else {
          console.warn('El objeto ktt10 no est√° disponible. Verifica la carga del script de Whapify.');
        }
      }, 1000); // Esperar 1 segundo para asegurarse de que el script se haya cargado
    });
  </script>
  
  <!-- Estilos personalizados para el bot√≥n de Whapify -->
  <style is:global>
    /* Estilos para el contenedor principal de Whapify */
    .ktt10-btn {
      margin-bottom: 70px !important;
      padding-bottom: 20px !important;
    }
  </style>
</body>
</html> 