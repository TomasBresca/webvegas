---
import PrizeCarousel from './PrizeCarousel.astro';

interface Props {
  registerLink?: string;
}

const { registerLink = "/registro" } = Astro.props;
---

<!-- Sección Ganadores -->
<section id="ganadores" class="py-16 px-4 relative overflow-hidden">
  <!-- Patrón de fondo tipo casino -->
  <div class="absolute inset-0 bg-[url('/images/pattern.png')] opacity-[0.02] pointer-events-none"></div>
  
  <!-- Overlay con gradiente -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-transparent to-black/50 pointer-events-none"></div>
  
  <div class="container mx-auto relative">
    <!-- Encabezado con efecto de brillo -->
    <div class="text-center mb-12">
      <h2 class="font-heading text-3xl md:text-5xl uppercase mb-4 drop-shadow-glow">
        ÚLTIMOS
        <span class="bg-gradient-to-r from-[#e6c656] to-[#d4af37] bg-clip-text text-transparent"> GANADORES</span>
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto mb-8">
        Estos son algunos de nuestros afortunados ganadores. ¡El próximo podés ser vos!
      </p>
    </div>

    <!-- Carrusel de Premios -->
    <PrizeCarousel />

    <!-- CTA -->
    <div class="text-center mt-12">
      <a 
        href={registerLink}
        target="_blank"
        rel="noopener"
        class="inline-flex items-center justify-center bg-black/30 backdrop-blur-sm border-2 border-[#e6c656] text-[#e6c656] 
               font-heading uppercase py-3 px-8 rounded-lg hover:bg-[#e6c656]/10 transition-all group gap-2"
      >
        REGISTRATE Y GANÁ
        <span class="group-hover:translate-x-1 transition-transform">→</span>
      </a>
    </div>
  </div>

  <!-- Elementos decorativos -->
  <div class="absolute -left-20 top-1/4 w-40 h-40 opacity-10">
    <img src="/images/card.svg" class="w-full h-full animate-float3" alt="Carta decorativa" />
  </div>
  <div class="absolute -right-16 bottom-1/4 w-32 h-32 opacity-10">
    <img src="/images/chip.svg" class="w-full h-full animate-float4" alt="Ficha decorativa" />
  </div>
</section> 