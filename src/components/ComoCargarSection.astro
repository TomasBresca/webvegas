---
import StepsCarousel from './StepsCarousel.astro';

interface Props {
  whatsappLink?: string;
}

const { whatsappLink = "https://wa.me/?text=Hola,%20quiero%20realizar%20una%20carga" } = Astro.props;
---

<!-- Secci칩n 쮺칩mo Cargar? -->
<section id="como-cargar" class="py-16 px-4 relative overflow-hidden">
  <!-- Patr칩n de fondo tipo casino -->
  <div class="absolute inset-0 bg-[url('/images/pattern.png')] opacity-[0.02] pointer-events-none"></div>
  
  <!-- Overlay con gradiente -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-transparent to-black/50 pointer-events-none"></div>
  
  <div class="container mx-auto relative">
    <!-- Encabezado con efecto de brillo -->
    <div class="text-center mb-12">
      <h2 class="font-heading text-3xl md:text-5xl uppercase mb-4 drop-shadow-glow">
        쮺칍MO
        <span class="bg-gradient-to-r from-[#e6c656] to-[#d4af37] bg-clip-text text-transparent"> CARGAR?</span>
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Envi치 tu comprobante y tu saldo se acredita al instante.
      </p>
    </div>

    <!-- Carrusel de pasos -->
    <StepsCarousel />
    
    <!-- CTA -->
    <div class="text-center mt-12">
      <a 
        href={whatsappLink} 
        target="_blank"
        rel="noopener"
        class="inline-flex items-center justify-center bg-gradient-to-r from-[#e6c656] to-[#d4af37] text-black 
               font-heading uppercase py-4 px-8 rounded-lg hover:scale-105 transition-all gap-3 shadow-glow-gold"
      >
        <span class="text-2xl">游눫</span>
        COMENZAR AHORA
      </a>
    </div>
  </div>
  
  <!-- Elementos decorativos -->
  <div class="absolute -left-20 top-1/3 w-40 h-40 opacity-10">
    <img src="/images/card.svg" class="w-full h-full animate-float2" alt="Carta decorativa" />
  </div>
  <div class="absolute -right-16 bottom-1/3 w-32 h-32 opacity-10">
    <img src="/images/chip.svg" class="w-full h-full animate-float5" alt="Ficha decorativa" />
  </div>
</section> 